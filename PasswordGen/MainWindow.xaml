<Window x:Class="PasswordGen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordGen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <Grid>
        <TextBox Name="LenghtBox" HorizontalAlignment="Center" Margin="0,95,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" Height="30" FontSize="19" PreviewTextInput="NumberValidationTextBox" />
        <Button Content="Generate Password" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" FontSize="20" Click="Gen_Password"/>
        <Label Content="Password Lenght" HorizontalAlignment="Center" Margin="0,64,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" ></Label>
        <TextBox Name="Password" HorizontalAlignment="Center" Margin="0,300,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Height="30" FontSize="19" IsReadOnly="True" IsEnabled="True" />

    </Grid>
</Window>
